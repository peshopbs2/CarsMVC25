@model IEnumerable<CarsMVC25.Services.DTOs.CarDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<div class="d-flex flex-wrap justify-content-between">
@foreach (var item in Model) {
    <div class="card p-3 col-3 mx-3 mb-3">
        <div class="card-thumbnail">
            <img class="img-thumbnail" src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="@Html.DisplayFor(modelItem => item.Brand) @Html.DisplayFor(modelItem => item.ModelName)" />
        </div>
        <h3 class="text-center mt-2">@Html.DisplayFor(modelItem => item.Brand) @Html.DisplayFor(modelItem => item.ModelName)</h3>
            <div class="d-flex flex-wrap justify-content-between">
            <a class="btn btn-warning mr-3" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-primary mr-3" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </div>
    </div>
}
</div>